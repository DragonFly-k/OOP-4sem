<UserControl x:Class="L6_7.Infrastructure.Resources.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Grid>
        <TextBox Height = "23"  
         HorizontalAlignment = "Left"  
         Margin = "0" Name = "txtBox"  
         VerticalAlignment = "Top" Width = "100" />

        <Button Content = "Click" FontSize="5"
         Height = "15" HorizontalAlignment = "Center"  
         Margin = "0,25,0,0" Name = "button"  
         VerticalAlignment = "Top" Click = "button_Click" Width="60" />
    </Grid>

</UserControl>
